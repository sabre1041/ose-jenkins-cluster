{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "jenkins-cluster-ephemeral",
        "annotations": {
            "description": "Jenkins cluster example",
            "iconClass": "icon-jenkins",
            "tags": "instant-app,jenkins"
        }
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-slave",
                "labels": {
                    "application": "${APPLICATION_NAME}-slave"
                }
            }
        },
		{
		    "kind": "ImageStream",
		    "apiVersion": "v1",
		    "metadata": {
		        "name": "rhel7"
		    },
			"spec": {
				"dockerImageRepository": "registry.access.redhat.com/rhel7/rhel"
			}
		},
		{
		    "kind": "ImageStream",
		    "apiVersion": "v1",
		    "metadata": {
		        "name": "ose-jenkins"
		    },
			"spec": {
				"dockerImageRepository": "registry.access.redhat.com/openshift3/jenkins-1-rhel7"
			}
		},
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "web",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${APPLICATION_NAME}"
                },
                "portalIP": "",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-slave",
                "creationTimestamp": null,
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "slave",
                        "protocol": "TCP",
                        "port": 50000,
                        "targetPort": 50000,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${APPLICATION_NAME}"
                },
                "portalIP": "",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
		{
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "source": {
                    "type": "Git",
                     "git": {
                         "uri": "${GIT_URI}",
                         "ref": "${GIT_REF}"
                     },
                     "contextDir": "jenkins"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${JENKINS_IMAGE_TAG}"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}:latest"
                    }
                },
                "triggers": [
		            {
		                "type": "ConfigChange"
		            },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ]
            }
		},
		{
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-slave",
                "labels": {
                    "application": "${APPLICATION_NAME}-slave"
                }
            },
            "spec": {
                "source": {
                    "type": "Git",
                     "git": {
                         "uri": "${GIT_URI}",
                         "ref": "${GIT_REF}"
                     },
                     "contextDir": "jenkins-slave"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "rhel7:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}-slave:latest"
                    }
                },
                "triggers": [
		            {
		                "type": "ConfigChange"
		            },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ]
            }
		},
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "host": "${APPLICATION_HOSTNAME}",
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}:latest"
                            },
                            "lastTriggeredImage": ""
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "name": "${APPLICATION_NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "name": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}",
                                "image": "${APPLICATION_NAME}",
                                "ports": [
                                    {
                                        "name": "web",
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "slave",
                                        "containerPort": 50000,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "JENKINS_PASSWORD",
                                        "value": "${JENKINS_PASSWORD}"
                                    },
                                    {
                                        "name": "JAVA_OPTS",
                                        "value": "-Dhudson.slaves.NodeProvisioner.recurrencePeriod=${SLAVE_RECCURENCE_PERIOD},-Dhudson.slaves.NodeProvisioner.initialDelay=100,-Dhudson.slaves.NodeProvisioner.MARGIN=100"
                                    }
                                ],
                                "resources": {},
                                "volumeMounts": [
                                    {
                                        "name": "${APPLICATION_NAME}-data",
                                        "mountPath": "/var/lib/jenkins"
                                    }
                                ],
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always",
                                "capabilities": {},
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                }
                            }
                        ],
                        "volumes": [
                            {
                                "name": "${APPLICATION_NAME}-data",
                                "emptyDir": {
                                    "medium": ""
                                }
                            }
                        ],
                        "serviceAccount": "${JENKINS_SERVICE_ACCOUNT}",
                        "serviceAccountName": "${JENKINS_SERVICE_ACCOUNT}",
                        "restartPolicy": "Always",
                        "dnsPolicy": "ClusterFirst"
                    }
                }
            }
		},
		{
		    "kind": "DeploymentConfig",
		    "apiVersion": "v1",
		    "metadata": {
		        "name": "${APPLICATION_NAME}-slave",
		        "creationTimestamp": null,
		        "labels": {
		            "application": "${APPLICATION_NAME}-slave"
		        }
		    },
		    "spec": {
		        "strategy": {
		            "type": "Rolling",
		            "rollingParams": {
		                "updatePeriodSeconds": 1,
		                "intervalSeconds": 1,
		                "timeoutSeconds": 600
		            },
		            "resources": {}
		        },
		        "triggers": [
		            {
		                "type": "ConfigChange"
		            },
		            {
		                "type": "ImageChange",
		                "imageChangeParams": {
		                    "automatic": true,
		                    "containerNames": [
		                        "${APPLICATION_NAME}-slave"
		                    ],
		                    "from": {
		                        "kind": "ImageStreamTag",
		                        "name": "${APPLICATION_NAME}-slave:latest"
		                    }
		                }
		            }
		        ],
		        "replicas": 1,
		        "selector": {
		            "application": "${APPLICATION_NAME}-slave",
		            "deploymentconfig": "${APPLICATION_NAME}-slave"
		        },
		        "template": {
		            "metadata": {
		                "creationTimestamp": null,
		                "labels": {
		                    "application": "${APPLICATION_NAME}-slave",
		                    "deploymentconfig": "${APPLICATION_NAME}-slave"
		                }
		            },
		            "spec": {
		                "volumes": [
		                    {
		                        "name": "${APPLICATION_NAME}-slave-data",
		                        "emptyDir": {}
		                    }
		                ],
		                "containers": [
		                    {
		                        "name": "${APPLICATION_NAME}-slave",
		                        "image": "${APPLICATION_NAME}-slave",
                                "env": [
                                    {
                                        "name": "JENKINS_PASSWORD",
                                        "value": "${JENKINS_PASSWORD}"
                                    },
                                    {
                                        "name": "EXECUTORS",
                                        "value": "${EXECUTORS}"
                                    },
                                    {
                                        "name": "JENKINS_CONTEXT_PATH",
                                        "value": ""
                                    }
                                ],
		                        "resources": {},
		                        "volumeMounts": [
		                            {
		                                "name": "${APPLICATION_NAME}-slave-data",
		                                "mountPath": "/var/lib/jenkins"
		                            }
		                        ],
		                        "terminationMessagePath": "/dev/termination-log",
		                        "imagePullPolicy": "Always"
		                    }
		                ],
		                "restartPolicy": "Always",
		                "terminationGracePeriodSeconds": 30,
		                "dnsPolicy": "ClusterFirst",
		                "securityContext": {}
		            }
		        }
		    },
		    "status": {}
		}
    ],
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "description": "Application Name",
            "value": "jenkins"
        },
        {
           "description": "Custom hostname.  Leave blank for default hostname, e.g.: <application-name>.<project>.<default-domain-suffix>",
           "name": "APPLICATION_HOSTNAME",
           "displayName": "Application hostname"
        },
        {
            "name": "JENKINS_PASSWORD",
            "description": "Password for the Jenkins user",
            "value": "password",
            "generate": "expression"
        },
        {
            "name": "JENKINS_SERVICE_ACCOUNT",
            "description": "OpenShift Service account for Jenkins",
            "value": "default"
        },
        {
            "name": "JENKINS_IMAGE_TAG",
            "description": "Base OpenShift Jenkins Image Tag",
            "value": "ose-jenkins:1.609-15"
        },
        {
            "name": "GIT_URI",
            "description": "Git Repository",
            "value": "https://github.com/sabre1041/ose-jenkins-cluster.git"
        },
        {
            "name": "GIT_REF",
            "description": "Git Branch",
            "value": "master"
        },
        {
            "name": "EXECUTORS",
            "description": "Number of executors per slave agent",
            "value": "1"
        },
        {
            "name": "SLAVE_RECCURENCE_PERIOD",
            "description": "Interval of time to check whether to provision additional slave nodes",
            "value": "500"
        }
    ],
    "labels": {
        "template": "jenkins-cluster-ephemeral"
    }
}
